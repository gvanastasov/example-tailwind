<h3 class="mb-8 p-4 border-b-2 border-placeholder"><a id="<%= id %>" class="mr-4">#</a>Radius</h3>

<div class="bg-placeholder p-8 mb-8">
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-8">
        <% [
            'rounded', 
            'rounded-md', 
            'rounded-lg',
            'rounded-full',
        ].forEach(rounding => { %>
        <div>
            <div class="<%= rounding %> border-black border-2 mx-auto w-16 h-16 p-8 bg-white"></div>
            <div class="text-center mt-4"><%= rounding %></div>
        </div>
        <% }); %>
    </div>
    <div class="text-center mt-4">Rounding</div>
</div>

