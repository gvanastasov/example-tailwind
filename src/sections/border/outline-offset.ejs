<h3 class="mb-8 p-4 border-b-2 border-placeholder"><a id="<%= id %>" class="mr-4">#</a>Outline Offset</h3>

<div class="bg-placeholder p-8 mb-8">
    <div class="grid grid-cols-4 gap-8">
        <% [
            'outline-offset-0', 
            'outline-offset-1', 
            'outline-offset-2', 
            'outline-offset-4', 
            'outline-offset-8', 
        ].forEach(x => { %>
        <div>
            <div class="outline outline-2 <%= x %> mx-auto w-16 h-16 p-8 bg-white"></div>
            <div class="text-center mt-4"><%= x %></div>
        </div>
        <% }); %>
    </div>
</div>