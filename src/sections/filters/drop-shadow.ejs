<h3 class="mb-8 p-4 border-b-2 border-placeholder"><a id="<%= id %>" class="mr-4">#</a>Drop Shadow</h3>

<div class="p-8 mb-8">
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-8">
        <% [
            'drop-shadow-sm', 
            'drop-shadow', 
            'drop-shadow-md', 
            'drop-shadow-lg', 
            'drop-shadow-xl', 
            'drop-shadow-2xl', 
            'drop-shadow-none', 
        ].forEach(x => { %>
        <div>
            <div class="<%= x %> rounded mx-auto w-16 h-16 bg-slate-50"></div>
            <div class="text-center mt-4"><%= x %></div>
        </div>
        <% }); %>
    </div>
</div>