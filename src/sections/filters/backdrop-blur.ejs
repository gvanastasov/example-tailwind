<h3 class="mb-8 p-4 border-b-2 border-placeholder"><a id="<%= id %>" class="mr-4">#</a>Backdrop</h3>

<div class="bg-placeholder p-8 mb-8">
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-8">
        <% [
            'backdrop-blur-none', 
            'backdrop-blur-sm', 
            'backdrop-blur', 
            'backdrop-blur-md', 
            'backdrop-blur-lg', 
            'backdrop-blur-xl', 
            'backdrop-blur-2xl', 
            'backdrop-blur-3xl', 
        ].forEach(x => { %>
        <div class="relative">
            <div class="absolute top-2 left-[calc(50%-24px)] <%= x %> w-12 h-12 bg-white/30"></div>
            <div class="rounded mx-auto w-16 h-16 p-4 bg-center bg-cover bg-no-repeat" style="background-image: url('./images/radial.png')"></div>
            <div class="text-center mt-4"><%= x %></div>
        </div>
        <% }); %>
    </div>
</div>