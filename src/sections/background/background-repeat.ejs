<h3 class="mb-8 p-4 border-b-2 border-placeholder"><a id="<%= id %>" class="mr-4">#</a>Repeat</h3>

<div class="bg-placeholder p-8 mb-8">
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
        <% [
            'bg-repeat', 
            'bg-no-repeat', 
            'bg-repeat-x',
            'bg-repeat-y',
            'bg-repeat-round',
            'bg-repeat-space',
        ].forEach(repeat => { %>
        <div>
            <div class="<%= repeat %> bg-[length:32px_32px] mx-auto w-48 h-48 p-8 bg-white border-4 border-black border-dashed" style="background-image: url('./images/radial.png')">
            </div>
            <div class="text-center mt-4"><%= repeat %></div>
        </div>
        <% }); %>
    </div>
</div>